<%= semantic_form_for(@person) do |f| %>
  <% if params[:role_id] %>
    <%= hidden_field_tag :role_id, params[:role_id] %>
    <%= hidden_field_tag :fte, params[:fte] %>
  <% end %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :name, required: true %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, button_html: { disable_with: "Wait...", class: 'btn btn-primary' } %>
  <% end %>
<% end %>
