<%= semantic_form_for([@sport, @role]) do |f| %>
<%= f.semantic_errors %>

<%= f.inputs do %>
  <%= f.input :name, label: 'Title', required: true %>
  <%= f.input :category, required: true %>
  <%= f.input :fte, required: true %>
<% end %>

<%= f.actions do %>
  <%= f.action :submit, button_html: { disable_with: "Wait...", class: 'btn btn-primary' } %>
<% end %>
<% end %>
