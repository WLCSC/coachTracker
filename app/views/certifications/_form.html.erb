<%= semantic_form_for([@person, @certification]) do |f| %>
<%= f.semantic_errors %>

<%= f.inputs do %>
  <%= f.input :course, required: true, as: :check_boxes %>
  <%= f.input :year, collection: Year.order(:id).map{|y| [y.name, y.id]}, required: true %>
<% end %>

<%= f.actions do %>
  <%= f.action :submit, button_html: { disable_with: "Wait...", class: 'btn btn-primary' } %>
<% end %>
<% end %>
