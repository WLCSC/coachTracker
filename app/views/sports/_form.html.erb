<%= semantic_form_for(@sport) do |f| %>
  <%= f.semantic_errors :state %>

  <%= f.inputs do %>
    <div class="row">
      <div class="col-md-8">
        <%= f.input :name %>
      </div>
      <div class="col-md-4">
        <%= f.input :short, label: "Short Code" %>
      </div>
    </div>
  <% end %>

  <%= f.inputs name: "Contract Dates" do %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :start_date %>
      </div>
      <div class="col-md-6">
        <%= f.input :end_date %>
      </div>
    </div>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, button_html: { disable_with: "Wait...", class: 'btn btn-primary' } %>
  <% end %>
<% end %>
