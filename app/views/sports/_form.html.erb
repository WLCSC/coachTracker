<%= semantic_form_for(@sport) do |f| %>
  <%= f.semantic_errors :state %>

  <%= f.inputs do %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :name, required: true %>
      </div>
      <div class="col-md-3">
        <%= f.input :short, label: "Short Code", required: true %>
      </div>
      <div class="col-md-3">
        <%= f.input :certified, as: :select, label: "Require Certification", required: true %>
      </div>
    </div>
  <% end %>

  <%= f.inputs name: "Contract Dates" do %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :start_date, required: true %>
      </div>
      <div class="col-md-6">
        <%= f.input :end_date, required: true %>
      </div>
    </div>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, button_html: { disable_with: "Wait...", class: 'btn btn-primary' } %>
  <% end %>
<% end %>
