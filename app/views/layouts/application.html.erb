<!DOCTYPE html>
<html>
	<head>
		<title>Coach Tracker</title>
		<%= stylesheet_link_tag    "application", media: "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "CoachTracker", root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Positions", root_path %></li>
            <li><%= link_to "People", people_path %></li>
	    <li><%= link_to "Sports", sports_path %></li>
            <li><%= link_to "Courses", courses_path %></li>
	    <li><%= link_to "Reporting", reports_path %></li>
          </ul>

					<ul class="nav navbar-nav navbar-right">
            <% if pseudoyear? %>
            <li><%= link_to pseudo_years_path do %><span class="label label-danger">Cancel <%= current_year.name %> Year Override</span><% end %></li>
            <% else %>
            <li><%= link_to years_path do %><span class="label label-success"><%= current_year.name %></span><% end %></li>
            <% end %>
						<li class="dropdown">
							<%= link_to "Setup", '#', class: 'dropdown-toggle', role: 'button', data: {toggle: 'dropdown'} %>
							<ul class="dropdown-menu">

								<li><%= link_to "Pay Categories", categories_path %></li>
								<li><%= link_to "Years", years_path %></li>
								<li><%= link_to "Seasons", seasons_path %></li>
							</ul>
						</li>
					</ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      <div class="row">
				<div class="col-md-12">
					<div class="page-container">
						<%= yield %>
					</div>
				</div>
      </div>

    </div><!-- /.container -->


	</body>
</html>
