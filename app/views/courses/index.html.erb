<h1>All Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Provider</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.provider %></td>
        <td>
          <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-warning btn-xs' %> &nbsp;
          <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-primary' %>
